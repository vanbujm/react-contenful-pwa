    "storybook": "start-storybook -p 9001 -c .storybook",
    "test-pre-commit": "CI=true react-scripts test --passWithNoTests"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx}": [
      "yarn run test-pre-commit",
      "eslint --fix",
      "git add"
    ]
